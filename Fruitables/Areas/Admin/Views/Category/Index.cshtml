
@model List<Category>
@{
    int count=0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Striped Table</h4>
                <a class="btn btn-success">Created</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    NO
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Product Count
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Settings
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category category in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @category.Name
                                    </td>
                                    <td>
                                        
                                        
                                        @category.Products.Count

                                       
                                    </td>
                                    <td>
                                        @category.CreateAt
                                    </td>
                                    <td>
                                        <a class="btn btn-warning">Update</a>
                                        <a class=" btn btn-danger">Delete</a>
                                        <a class=" btn btn-primary">Deatil</a>
                                    </td>
                                </tr>
                            }
                           

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>