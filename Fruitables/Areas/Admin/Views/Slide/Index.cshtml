@model List<Slide>

@{
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Categories</h4>
                <a asp-action="create" class="btn btn-success">CREATED</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Order
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Settings
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Slide slide in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/assets/img/@slide.Image">   <img />
                                    </td>
                                    <td>
                                        @slide.Title
                                    </td>
                                    <td>
                                        @slide.Order
                                    </td>
                                    <td>
                                        @slide.CreateAt
                                    </td>
                                    <td>
                                        <a asp-action="update" asp-route-id="@slide.Id" class="btn btn-warning">Update</a>
                                        <a asp-action="delete" asp-route-id="@slide.Id" class=" btn btn-danger">Delete</a>
                                        <a asp-action="detail" asp-route-id="@slide.Id" class=" btn btn-primary">Detail</a>
                                    </td>

                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


